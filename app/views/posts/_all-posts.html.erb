<div class="column">
  <% if user_signed_in? %>
    <article class="media box column">
      <div class="media-content">
        <%= render 'posts/form' %>
      </div>
    </article>
  <% end %>
  <% @posts.each do | post | %>
    <div class="box">
      <article class="media">
        <div class="media-content">
          <div class="content">
          <% if user_signed_in? %>
            <small><%= post.user.name %></small><br/>
          <% end %>  
            <p><%= post.post %></p>
          </div>
        </div>
      </article>
    </div>
  <% end %>
</div>
